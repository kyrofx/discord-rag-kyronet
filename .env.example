# ===========================================
# Discord RAG with Gemini - Environment Config
# ===========================================
# Copy this file to .env and fill in your values

# Google AI (Gemini)
GOOGLE_API_KEY=your_google_api_key_here

# Discord Bot
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_BOT_CLIENT_ID=your_discord_bot_client_id_here

# MongoDB
MONGODB_URL=mongodb://discord_rag_mongo:27017
MONGODB_DB=discord_rag
MONGODB_COLLECTION=messages

# Redis (for vectors and stats)
REDIS_URL=redis://discord_rag_redis:6379

# API (internal service URL)
RAG_API_BASE_URL=http://discord_rag_api:8000

# API Authentication (for /v1/* endpoints)
# Leave empty to disable auth (dev mode)
API_KEY=your_api_key_here

# Dashboard Authentication
DASHBOARD_USER=admin
DASHBOARD_PASS=your_secure_password_here

# Scheduler (automated ingestion)
# Comma-separated list of Discord channel IDs to monitor
DISCORD_CHANNEL_IDS=channel_id_1,channel_id_2
# Cron expression for when to run (default: 3 AM daily)
SCHEDULE_CRON=0 3 * * *
# Minutes of quiet required before ingestion starts
QUIET_PERIOD_MINUTES=15
# Minutes to back off if activity detected
BACKOFF_MINUTES=10
